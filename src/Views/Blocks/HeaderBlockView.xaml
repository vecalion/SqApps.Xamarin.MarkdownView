<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="MarkdownView.Views.Blocks.HeaderBlockView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:MarkdownView.ViewModels;assembly=MarkdownView"
    x:DataType="viewModels:HeaderBlockViewModel">
    <Label
        Margin="0,20,0,0"
        FontAttributes="Bold"
        FontFamily="{StaticResource FontSpecialBold}"
        FontSize="30"
        Text="{Binding Header}"
        TextColor="{DynamicResource TextColor}" />
</ContentView>
